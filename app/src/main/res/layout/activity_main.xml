<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bitcoin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitcoinrateapp.MainActivity">

    <ImageView
        android:id="@+id/card1"
        android:layout_marginTop="105dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="77dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card1"
        android:id="@+id/card2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="77dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card2"
        android:id="@+id/card3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="77dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card3"
        android:id="@+id/card4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="77dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card4"
        android:id="@+id/card5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="77dp" />

    <TextView
        android:layout_marginLeft="90dp"
        android:layout_marginTop="118dp"
        android:gravity="center"
        android:id="@+id/bit_rate"
        android:text="Bitcoin rate:"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_marginTop="120dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/bit_icon2"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/bitcoin_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginRight="25dp"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/bit_rate"
        android:id="@+id/rate"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/rate"
        android:gravity="center"
        android:id="@+id/eth_rate"
        android:text="Ethereum rate:"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginTop="14dp"
        android:layout_below="@+id/rate"
        android:layout_marginLeft="16dp"
        android:src="@drawable/eth_icon"
        android:layout_width="75dp"
        android:layout_height="75dp" />
    <ImageView
        android:id="@+id/ether_arrow"
        android:layout_below="@+id/rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="25dp"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/eth_rate"
        android:id="@+id/e_rate"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/e_rate"
        android:gravity="center"
        android:id="@+id/rip_rate"
        android:text="Ripple rate:"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_marginTop="56dp"
        android:layout_below="@+id/eth_rate"
        android:layout_marginLeft="28dp"
        android:src="@drawable/ripple_icon"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/ripple_arrow"
        android:layout_below="@+id/eth_rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="56dp"
        android:layout_marginRight="25dp"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/rip_rate"
        android:id="@+id/r_rate"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/r_rate"
        android:gravity="center"
        android:id="@+id/lite_rate"
        android:text="Litecoin rate:"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_marginTop="55dp"
        android:layout_below="@+id/rip_rate"
        android:layout_marginLeft="28dp"
        android:src="@drawable/lite_icon"
        android:layout_width="45dp"
        android:layout_height="55dp" />
    <ImageView
        android:id="@+id/lite_arrow"
        android:layout_below="@+id/rip_rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="58dp"
        android:layout_marginRight="25dp"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/lite_rate"
        android:id="@+id/l_rate"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/l_rate"
        android:gravity="center"
        android:id="@+id/bc_rate"
        android:text="Bitcoin Cash rate:"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginTop="55dp"
        android:layout_below="@+id/lite_rate"
        android:layout_marginLeft="28dp"
        android:src="@drawable/bcash_icon"
        android:layout_width="45dp"
        android:layout_height="55dp" />
    <ImageView
        android:id="@+id/bcash_arrow"
        android:layout_below="@+id/lite_rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="58dp"
        android:layout_marginRight="25dp"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/bc_rate"
        android:id="@+id/bcach_rate"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/refresh"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/refresh_btn"
        android:layout_below="@+id/card5"
        android:layout_width="45dp"
        android:layout_height="45dp" />

</RelativeLayout>
