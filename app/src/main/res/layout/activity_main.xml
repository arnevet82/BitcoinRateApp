<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitcoinrateapp.MainActivity">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:text="Trending Currencies"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:id="@+id/trending"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginTop="53dp"
        android:layout_width="220dp"
        android:layout_height="0.5dp"
        android:background="#ffffff" />

    <ImageView
        android:id="@+id/card1"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="72dp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card1"
        android:id="@+id/card2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="72dp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card2"
        android:id="@+id/card3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="72dp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card3"
        android:id="@+id/card4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="72dp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card4"
        android:id="@+id/card5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_width="380dp"
        android:layout_height="72dp" />

    <TextView
        android:layout_marginLeft="55dp"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:id="@+id/bit_rate"
        android:text="Bitcoin"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_marginLeft="22dp"
        android:layout_marginTop="109dp"
        android:src="@drawable/bit_icon2"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_marginLeft="218dp"
        android:layout_marginTop="100dp"
        android:id="@+id/rate"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/bitcoin_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginTop="98dp"
        android:layout_marginRight="25dp"
        android:layout_width="20dp"
        android:layout_height="50dp" />


    <TextView
        android:layout_alignLeft="@+id/r_rate"
        android:layout_toLeftOf="@+id/bcash_arrow"
        android:layout_below="@+id/rate"
        android:textSize="12dp"
        android:id="@+id/bit_pct"
        android:layout_width="50dp"
        android:layout_height="35dp" />
    <TextView
        android:layout_marginTop="67dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/rate"
        android:gravity="center"
        android:id="@+id/eth_rate"
        android:text="Ethereum"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_below="@+id/rate"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ethereum_icon"
        android:layout_width="40dp"
        android:layout_height="35dp" />


    <ImageView
        android:id="@+id/ether_arrow"
        android:layout_below="@+id/rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="25dp"
        android:layout_width="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_below="@+id/rate"
        android:layout_marginLeft="218dp"
        android:layout_marginTop="58dp"
        android:id="@+id/e_rate"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@+id/r_rate"
        android:layout_toLeftOf="@+id/bcash_arrow"
        android:layout_below="@+id/e_rate"
        android:textSize="12dp"
        android:id="@+id/eth_pct"
        android:layout_width="50dp"
        android:layout_height="35dp" />
    <TextView
        android:layout_marginTop="66dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/e_rate"
        android:gravity="center"
        android:id="@+id/rip_rate"
        android:text="Ripple"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_below="@+id/e_rate"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/ripple_icon"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <TextView
        android:layout_alignLeft="@+id/r_rate"
        android:layout_toLeftOf="@+id/bcash_arrow"
        android:layout_below="@+id/r_rate"
        android:id="@+id/rip_pct"
        android:textSize="12dp"
        android:layout_width="50dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/ripple_arrow"
        android:layout_below="@+id/eth_rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:layout_width="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="58dp"
        android:layout_marginLeft="218dp"
        android:layout_below="@+id/e_rate"
        android:id="@+id/r_rate"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="66dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/r_rate"
        android:gravity="center"
        android:id="@+id/lite_rate"
        android:text="Litecoin"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_below="@+id/r_rate"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/lite_icon"
        android:layout_width="27dp"
        android:layout_height="27dp" />

    <TextView
        android:layout_alignLeft="@+id/r_rate"
        android:layout_toLeftOf="@+id/bcash_arrow"
        android:layout_below="@+id/l_rate"
        android:id="@+id/lite_pct"
        android:textSize="12dp"
        android:layout_width="50dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/lite_arrow"
        android:layout_below="@+id/rip_rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:layout_width="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginLeft="218dp"
        android:layout_below="@+id/r_rate"
        android:layout_marginTop="58dp"
        android:id="@+id/l_rate"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="65dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/l_rate"
        android:gravity="center"
        android:id="@+id/bc_rate"
        android:text="Bitcoin Cash"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_below="@+id/l_rate"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/bcash_icon"
        android:layout_width="27dp"
        android:layout_height="27dp" />

    <TextView
        android:layout_alignLeft="@+id/l_rate"
        android:layout_toLeftOf="@+id/bcash_arrow"
        android:layout_below="@+id/bcach_rate"
        android:id="@+id/bc_pct"
        android:textSize="12dp"
        android:layout_width="50dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/bcash_arrow"
        android:layout_below="@+id/lite_rate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:layout_width="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_marginLeft="218dp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/l_rate"
        android:id="@+id/bcach_rate"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/refresh"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/refresh_btn"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>
